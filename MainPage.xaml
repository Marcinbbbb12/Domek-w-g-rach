<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Domek_w_górach.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
Text="Domek w Górach"
                FontSize="Large"
               
         HorizontalOptions="Center"
       />
            <Image
                
                Source="gory.png"
                HeightRequest="185"
                Aspect="AspectFit"
                />


            <Button
                x:Name="CounterBtn"
                Text="POLUB" 
                BackgroundColor="#008080"
             TextColor="white"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Button
          x:Name="CounterBtn1"
          Text="USUN" 
          BackgroundColor="#008080"
                 TextColor="white"
          Clicked="OnCounterClicked"
          HorizontalOptions="Fill" />
            <Button
        x:Name="CounterBtn2"
        Text="ZAPISZ" 
                BackgroundColor="#008080"
                 TextColor="white"
       
        Clicked="OnCounterClicked"
        HorizontalOptions="Fill" />
            <Label
                HorizontalOptions="End"
                Text="0 polubień"
                />
  
            <HorizontalStackLayout
                
               
                
                />
            <Label
                Text="opis"
               
                />
            <Label
                Text="Odwiedź komfortowy domek w Sudetach, blisko do szlaków turystycznych"
                />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
